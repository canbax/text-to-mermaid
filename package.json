{
  "name": "text-to-mermaid",
  "version": "0.0.5",
  "description": "Convert natural language text to Mermaid.js syntax using rule-based algorithms or Large Language Models",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "build": {
    "lib": {
      "entry": "src/index.ts",
      "name": "text-to-mermaid",
      "fileName": "index"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "format": "prettier --write src/",
    "lint": "oxlint",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -r 0 -s",
    "build": "tsup",
    "preview": "vite preview",
    "test-watch": "vitest",
    "test": "vitest run",
    "prepare": "husky install",
    "checks": "npm run format && npm run lint && npm run test",
    "patch-release": "npm run checks && npm run build && npm version patch && npm publish"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,vue,astro,svelte,json,md}": [
      "prettier --write",
      "oxlint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.2.0",
    "prettier": "3.5.3",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@google/genai": "^1.37.0",
    "compromise": "^14.14.5"
  }
}
